{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"github>renovatebot/.github"
	],
	"packageRules": [
		{
			"respectLatest": false,
			"minor": {
				"automerge": true
			},
			"major": {
				"automerge": false
			},
			"schedule": "before 5am on Monday",
			"matchDepTypes": [
				"optionalDependencies"
			]
		},
		{
			"minor": {
				"automerge": true
			},
			"major": {
				"automerge": false
			},
			"schedule": null,
			"matchDepTypes": [
				"devDependencies"
			]
		},
		{
			"rangeStrategy": "widen",
			"matchDepTypes": [
				"peerDependencies"
			]
		}
	]
}
